@model IQueryable<ShopFull.Models.Product>

@{
    ViewBag.Title = "Product By Cat";
}

<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>@ViewBag.CategoryName</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @{
                foreach (var item in Model)
                {
                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="@Url.Action("Preview", "Home",new { id=item.Id})"><img src=@item.Image alt="" /></a>
                        <h2>@item.Title </h2>
                        <p>@item.Description</p>
                        <p><span class="price">$@item.Price</span></p>

                        <div class="button"><span><a href="@Url.Action("Preview","Home",new { id=item.Id})" class="details">Details</a></span></div>
                    </div>
                }

            }
        </div>


    </div>
</div>