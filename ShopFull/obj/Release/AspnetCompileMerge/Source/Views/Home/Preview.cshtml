                </div>

            </div>
            <div class="rightsidebar span_3_of_1">
                <h2>CATEGORIES</h2>
                <ul>
                    @{
                        foreach (var item in (IQueryable<Category>)TempData["Categories"])
                        {
                            <li><a href="@Url.Action("ProductByCat", "Home", new { id = item.Id })">@item.Name</a></li>
                        }
                    }
                </ul>

            </div>
        </div>
    </div>
</div>


