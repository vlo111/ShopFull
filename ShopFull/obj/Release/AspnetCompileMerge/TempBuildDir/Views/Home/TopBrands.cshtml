                        <p><span class="price">$@item.Price</span></p>
                        <div class="button"><span><a href="@Url.Action("Preview","Home",new { id=item.Id})" class="details">Details</a></span></div>
                    </div>

                }
            }
        </div>
        <div class="content_bottom">
            <div class="heading">
                <h3>Canon</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @{
                var queryTopBrandsCanon = from p in Model
                                            where p.TopBrands == "Canon"
                                            select p;
