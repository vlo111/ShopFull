@model IEnumerable<ShopFull.Models.Product>
@{
    ViewBag.Title = "Products";
}

<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>Latest from Iphone</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @{foreach (var item in Model)
                {
                    if (item.Id >= 22 && item.Id <= 25)
                    {
                        <div class="grid_1_of_4 images_1_of_4">
                            <a href="@Url.Action("Preview", "Home", new {id = item.Id })"><img src=@item.Image alt="" /></a>
                            <h2>@item.Title </h2>
                            <p>@item.Description</p>
                            <p><span class="price">$@item.Price</span></p>
                            <div class="button"><span><a href="@Url.Action("Preview","Home",new { id=item.Id})" class="details">Details</a></span></div>

                        </div>
                    }
                }
            }

        </div>
        <div class="content_bottom">
            <div class="heading">
                <h3>Latest from Acer</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @{foreach (var item in Model)
                {
                    if (item.Id >= 39 && item.Id <= 42)
                    {
                        <div class="grid_1_of_4 images_1_of_4">
                            <a href="@Url.Action("Preview", "Home", new {id = item.Id })"><img src=@item.Image alt="" /></a>
                            <h2>@item.Title </h2>
                            <p><span class="price">$@item.Price</span></p>

                            <div class="button"><span><a href="@Url.Action("Preview","Home",new { id=item.Id})" class="details">Details</a></span></div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>